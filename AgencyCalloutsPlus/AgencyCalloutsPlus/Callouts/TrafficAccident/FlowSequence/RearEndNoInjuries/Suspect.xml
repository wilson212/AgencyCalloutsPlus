<?xml version="1.0" encoding="utf-8" ?>
<!--
  Defined Variables for string replacement (ex: $varName$)
    - SuspectVehicleType  : Gets the name of the suspects vehicle type (ex: car, truck, motorcycle etc)
    - VictimVehicleType   : Gets the name of the victims vehicle type (ex: car, truck, motorcycle etc)
    - SuspectTitle        : Gets the title and surname of the suspect (ex: Mr. Smith)
    - VictimTitle         : Gets the title and surname of the victim (ex: Ms. Clark)
    
  Condition Statement Defined Variables:
    - Victim    -> [T:AgencyCalloutsPlus.Mod.PedWrapper]  (source: https://github.com/wilson212/AgencyCalloutsPlus/blob/master/AgencyCalloutsPlus/Mod/PedWrapper.cs)
    - Suspect   -> [T:AgencyCalloutsPlus.Mod.PedWrapper]  (source: https://github.com/wilson212/AgencyCalloutsPlus/blob/master/AgencyCalloutsPlus/Mod/PedWrapper.cs)
    - Weather   -> [T:AgencyCalloutsPlus.Mod.WeatherInfo] (source: https://github.com/wilson212/AgencyCalloutsPlus/blob/master/AgencyCalloutsPlus/Mod/WeatherInfo.cs)
-->
<FlowSequence>
  <Input>
    <!-- Initial Questioning Menu -->
    <Menu id="main">
      <MenuItem id="ok" buttonText="Do you need medical?" visible="true">
        <Line time="2000">Do you require any medical attention?</Line>
      </MenuItem>
      <MenuItem id="how" buttonText="How did this happen?" visible="true">
        <Line time="2000">How did this happen?</Line>
      </MenuItem>
      <MenuItem id="tailgate" buttonText="Tailgating?" visible="false">
        <Line time="3000">$VictimTitle$ stated that you were tailgating. Is this a true statement?</Line>
      </MenuItem>
    </Menu>
  </Input>
  <Output>

    <!-- Default Outcome: Victim2 is at fault for texting and driving -->
    <FlowOutcome id="distracted" initialMenu="main">
      <Response to="ok" returnMenu="main">
        <LineSet probability="100">
          <Line time="3000">No, I seem to be ok...</Line>
        </LineSet>
        <LineSet probability="100">
          <Line time="3000">I am ok officer</Line>
        </LineSet>
        <LineSet probability="100">
          <Line time="3000">Nope, I'm fine thanks...</Line>
        </LineSet>
      </Response>
      <Response to="how" returnMenu="main">
        <!-- Honest 1 -->
        <LineSet probability="10">
          <Line time="3000">Well officer, Ill be honest... I was texting and driving.</Line>
        </LineSet>
        <!-- Honest 2 -->
        <LineSet probability="10">
          <Line time="4000">I was watching YouTube on my phone and wasn't paying attention.</Line>
        </LineSet>
        <!-- Honest 3 -->
        <LineSet probability="10">
          <Line time="4000">I was day dreaming and didn't see the car in front of my hit thier brakes.</Line>
        </LineSet>
        <!-- brake check asshole -->
        <LineSet probability="10" if="Victim.Ped.IsMale == true">
          <Line time="4000">This asshole in front of me brake checked me!</Line>
        </LineSet>
        <!-- brake check bitch -->
        <LineSet probability="10" if="Victim.Ped.IsFemale == true">
          <Line time="4000">This bitch in front of me brake checked me!</Line>
        </LineSet>
      </Response>
    </FlowOutcome>

    <!-- Outcome: Victim2 is at fault for eating and driving -->
    <FlowOutcome id="eating" initialMenu="main">
      <Response to="ok" returnMenu="main">
        <LineSet probability="100">
          <Line time="3000">No, I seem to be ok...</Line>
        </LineSet>
        <LineSet probability="100">
          <Line time="3000">I am ok officer</Line>
        </LineSet>
        <LineSet probability="100">
          <Line time="3000">Nope, I'm fine thanks...</Line>
        </LineSet>
      </Response>
      <Response to="how" returnMenu="main">
        <!-- Honest 1 -->
        <LineSet probability="10">
          <Line time="3000">Well officer, Ill be honest... I was eating my lunch and didnt notice the car in front slow down.</Line>
        </LineSet>
        <!-- Honest 2 -->
        <LineSet probability="10">
          <Line time="4000">I was watching eating my lunch and wasn't paying attention.</Line>
        </LineSet>
        <!-- brake check asshole -->
        <LineSet probability="10" if="Victim.Ped.IsMale == true">
          <Line time="4000">This asshole in front of me brake checked me!</Line>
        </LineSet>
        <!-- brake check bitch -->
        <LineSet probability="10" if="Victim.Ped.IsFemale == true">
          <Line time="4000">This bitch in front of me brake checked me!</Line>
        </LineSet>
      </Response>
    </FlowOutcome>

    <!-- Outcome: Victim2 is at fault for tailgating -->
    <FlowOutcome id="tailgating" initialMenu="main">
      <Response to="ok" returnMenu="main">
        <LineSet probability="100">
          <Line time="3000">No, I seem to be ok...</Line>
        </LineSet>
        <LineSet probability="100">
          <Line time="3000">I am ok officer</Line>
        </LineSet>
        <LineSet probability="100">
          <Line time="3000">Nope, I'm fine thanks...</Line>
        </LineSet>
      </Response>
      <Response to="how" returnMenu="main">
        <!-- Honest 1 -->
        <LineSet probability="10">
          <Line time="3000">Well officer, Ill be honest... I was was in a hurry...</Line>
          <Line time="3000">and I might have been following too close to the car in front of me</Line>
        </LineSet>
        <!-- brake check asshole -->
        <LineSet probability="10" if="Victim.Ped.IsMale == true">
          <Line time="4000">This asshole in front of me brake checked me!</Line>
        </LineSet>
        <!-- brake check bitch -->
        <LineSet probability="10" if="Victim.Ped.IsFemale == true">
          <Line time="4000">This bitch in front of me brake checked me!</Line>
        </LineSet>
      </Response>
      <Response to="tailgate" returnMenu="main">
        <LineSet probability="5" if="Victim.Ped.IsFemale == true">
          <Line time="4000">I was driving a little close I suppose...</Line>
        </LineSet>
        <LineSet probability="5" if="Victim.Ped.IsFemale == true">
          <Line time="4000">pfffft, Whatever...</Line>
        </LineSet>
        <LineSet probability="5" if="Victim.Ped.IsMale == true">
          <Line time="4000">No, that dude is lying!</Line>
        </LineSet>
        <LineSet probability="5" if="Victim.Ped.IsFemale == true">
          <Line time="4000">No, that chick is lying!</Line>
        </LineSet>
      </Response>
    </FlowOutcome>

    <!-- Outcome: Victim2 is at fault for tailgating -->
    <FlowOutcome id="wetRoads,snowing" initialMenu="main">
      <Response to="ok" returnMenu="main">
        <LineSet probability="100">
          <Line time="3000">No, I seem to be ok...</Line>
        </LineSet>
        <LineSet probability="100">
          <Line time="3000">I am ok officer</Line>
        </LineSet>
        <LineSet probability="100">
          <Line time="3000">Nope, I'm fine thanks...</Line>
        </LineSet>
      </Response>
      <Response to="how" returnMenu="main">
        <!-- Honest 1 -->
        <LineSet probability="10">
          <Line time="4000">Well officer, I tried to slow down but my $SuspectVehicleType$ just slid right into the back of them</Line>
        </LineSet>
        <!-- brake check asshole -->
        <LineSet probability="10" if="Victim.Ped.IsMale == true and Weather.IsSnowing">
          <Line time="4000">This asshole in front of me brake checked me! Does he not know its icy out here?</Line>
        </LineSet>
        <LineSet probability="10" if="Victim.Ped.IsFemale == true and Weather.IsSnowing">
          <Line time="4000">This bitch in front of me brake checked me! Does he not know its icy out here?</Line>
        </LineSet>
        <LineSet probability="10" if="Victim.Ped.IsMale == true and Weather.RoadsAreWet == true">
          <Line time="4000">This asshole in front of me brake checked me! The roads are slippery today</Line>
        </LineSet>
        <LineSet probability="10" if="Victim.Ped.IsFemale == true and Weather.RoadsAreWet == true">
          <Line time="4000">This bitch in front of me brake checked me! The roads are slippery today</Line>
        </LineSet>
      </Response>
    </FlowOutcome>

  </Output>
</FlowSequence>