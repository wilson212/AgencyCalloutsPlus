<?xml version="1.0" encoding="utf-8" ?>
<!--
  Defined Variables for string replacement:
    - SuspectVehicleType  : Gets the name of the suspects vehicle type (ex: car, truck, motorcycle etc)
    - VictimVehicleType   : Gets the name of the victims vehicle type (ex: car, truck, motorcycle etc)
    - SuspectTitle        : Gets the title and surname of the suspect (ex: Mr. Smith)
    - VictimTitle         : Gets the title and surname of the victim (ex: Ms. Clark)
    
  Condition Statement Defined Variables:
    - Victim    -> [T:AgencyCalloutsPlus.Mod.PedWrapper]  (source: https://github.com/wilson212/AgencyCalloutsPlus/blob/master/AgencyCalloutsPlus/Mod/PedWrapper.cs)
    - Suspect   -> [T:AgencyCalloutsPlus.Mod.PedWrapper]  (source: https://github.com/wilson212/AgencyCalloutsPlus/blob/master/AgencyCalloutsPlus/Mod/PedWrapper.cs)
    - Weather   -> [T:AgencyCalloutsPlus.Mod.WeatherInfo] (source: https://github.com/wilson212/AgencyCalloutsPlus/blob/master/AgencyCalloutsPlus/Mod/WeatherInfo.cs)
-->
<FlowSequence>
  <Input>
    <!-- Initial Questioning Menu -->
    <Menu id="main">
      <MenuItem id="ok" buttonText="Do you need medical?" visible="true">
        <Line time="2000">Do you require any medical attention?</Line>
      </MenuItem>
      <MenuItem id="how" buttonText="How did this happen?" visible="true">
        <Line time="2000">Can you tell me how this happened?</Line>
      </MenuItem>
    </Menu>
  </Input>
  <Output>
    
    <!-- Default Statement -->
    <FlowOutcome id="distracted,eating" initialMenu="main">
      <Response to="ok" returnMenu="main">
        <LineSet probability="100">
          <Line time="3000">No, I seem to be ok...</Line>
        </LineSet>
        <LineSet probability="100">
          <Line time="3000">No, I am ok officer</Line>
        </LineSet>
        <LineSet probability="50">
          <Line time="3000">Nope</Line>
        </LineSet>
      </Response>
      <Response to="how" returnMenu="main">
        <LineSet probability="100" if="Suspect.Ped.IsMale == true">
          <Line time="4000">I was just driving my $VictimVehicleType$ when this jackass rear-ended me.</Line>
        </LineSet>
        <LineSet probability="100" if="Suspect.Ped.IsFemale == true">
          <Line time="4000">I was just driving my $VictimVehicleType$ when this bitch rear-ended me.</Line>
        </LineSet>
        <LineSet probability="50">
          <Line time="4000">I was just driving my $VictimVehicleType$. All the sudden this $SuspectVehicleType$ just crashed into the back of me!</Line>
        </LineSet>
      </Response>
    </FlowOutcome>

    <!-- Tailgating Statement -->
    <FlowOutcome id="tailgating" initialMenu="main">
      <Response to="ok" returnMenu="main">
        <LineSet probability="100">
          <Line time="3000">No, I seem to be ok...</Line>
        </LineSet>
        <LineSet probability="100">
          <Line time="3000">No, I am ok officer</Line>
        </LineSet>
        <LineSet probability="50">
          <Line time="3000">Nope</Line>
        </LineSet>
      </Response>
      <Response to="how" returnMenu="main">
        <LineSet probability="100" if="Suspect.Ped.IsMale == true" show="Suspect.tailgate">
          <Line time="4000">I noticed that this jackass was tailgating me before he rear-ended me.</Line>
        </LineSet>
        <LineSet probability="100" if="Suspect.Ped.IsMale == true" show="Suspect.tailgate">
          <Line time="4000">This asshole was tailgating me and then crashed into me.</Line>
        </LineSet>
        <LineSet probability="100" if="Suspect.Ped.IsFemale == true" show="Suspect.tailgate">
          <Line time="4000">I noticed that this bitch was tailgating me before he rear-ended me..</Line>
        </LineSet>
        <LineSet probability="100" if="Suspect.Ped.IsFemale == true" show="Suspect.tailgate">
          <Line time="4000">This dittz was tailgating me and then crashed into me.</Line>
        </LineSet>
        <LineSet probability="50">
          <Line time="4000">I was just driving my $VictimVehicleType$. All the sudden this person just crashed into the back of me!</Line>
        </LineSet>
      </Response>
    </FlowOutcome>

    <!-- Raining / Snowing Statement -->
    <FlowOutcome id="wetRoads,snowing" initialMenu="main">
      <Response to="ok" returnMenu="main">
        <LineSet probability="100">
          <Line time="3000">No, I seem to be ok...</Line>
        </LineSet>
        <LineSet probability="100">
          <Line time="3000">No, I am ok officer</Line>
        </LineSet>
        <LineSet probability="50">
          <Line time="3000">Nope</Line>
        </LineSet>
      </Response>
      <Response to="how" returnMenu="main">
        <LineSet probability="100" if="Suspect.Ped.IsMale == true">
          <Line time="3000">I was just driving my $VictimVehicleType$ when I heard a loud screeching sound behind me.</Line>
          <Line time="3000">Thats when that guy read ended me. It's pretty slick out right now</Line>
        </LineSet>
        <LineSet probability="100" if="Suspect.Ped.IsFemale == true">
          <Line time="3000">I was just driving my $VictimVehicleType$ when I heard a loud screeching sound behind me.</Line>
          <Line time="3000">Thats when that women read ended me. It's pretty slick out right now</Line>
        </LineSet>
        <LineSet probability="50">
          <Line time="4000">I was just driving my $VictimVehicleType$. All the sudden this person just crashed into the back of me!</Line>
        </LineSet>
      </Response>
    </FlowOutcome>
    
  </Output>
</FlowSequence>