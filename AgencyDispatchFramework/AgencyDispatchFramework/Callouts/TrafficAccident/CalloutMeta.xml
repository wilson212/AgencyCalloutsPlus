<?xml version="1.0" encoding="utf-8" ?>
<CalloutMeta>
  <Author>Wilson212</Author>
  <Controller>AgencyDispatchFramework.Callouts.TrafficAccident.Controller</Controller>
  <Scenarios>
    
    <RearEndNoInjuries>
      <Category>Traffic</Category>
      <!-- Agencies that handle this callout scenario -->
      <Agencies target="Police">
        <Agency>CityPolice</Agency>
        <Agency>CountySheriff</Agency>
        <Agency>HighwayPatrol</Agency>
      </Agencies>
      <!-- The probability of this scenario happening relative to every other scenario of this crime catagory -->
      <Probabilities>
        <Morning clear="10" overcast="10" rain="15" snow="18" storm="12" />
        <Day clear="10" overcast="10" rain="15" snow="18" storm="12" />
        <Evening clear="10" overcast="10" rain="15" snow="18" storm="12" />
        <Night clear="10" overcast="10" rain="15" snow="18" storm="12" />
      </Probabilities>
      <Location>
        <Type>RoadShoulder</Type>
        <RequiredFlags mode="Any">
          <!-- <Requirement mode="All" inverse="false"></Requirement> -->
        </RequiredFlags>
      </Location>
      <Dispatch>
        <!-- Scanner Audio data for call -->
        <Scanner>
          <AudioString>WE_HAVE_01 CRIME_TRAFFIC_ALERT IN_OR_ON_POSITION</AudioString>
          <PrefixCallSign>True</PrefixCallSign>
          <UsePosition>True</UsePosition>
        </Scanner>
        <!-- CAD texture for this call in call details -->
        <CADTexture dictionary="char_chat_call">char_chat_call</CADTexture>
        <!-- Callout Details are for ComputerPlus / CAD -->
        <Descriptions>
          <Description probability="10">
            <Source>Citizen</Source>
            <Text>RP SAYS THEY WERE INVLOVED IN A VEHICLE COLLISION NEAR $LOCATION$. NO INJURIES REPORTED AT THIS TIME. ~n~~n~RP STATED THAT OTHER INVOLED PED IS BEING AGRESSIVE. RESPOND CODE 2</Text>
          </Description>
        </Descriptions>
        <IncidentType abbreviation="MVA">Motor Vehicle Accident</IncidentType>
        <Priority>Expedited</Priority>
        <Response>2</Response>
      </Dispatch>
      <FlowSequence>
        <FlowOutcome id="distracted" probability="10" />
        <FlowOutcome id="eating" probability="3" />
        <FlowOutcome id="tailgating" probability="5" />
        <FlowOutcome id="wetRoads" probability="7" if="Weather.RoadsAreWet == true and Weather.IsSnowing == false"/>
        <FlowOutcome id="snowing" probability="15" if="Weather.IsSnowing == true"/>
        <!-- 
        <FlowOutcome id="drunkDriver" probability="2" />
        <FlowOutcome id="impaired" probability="2" />
        <FlowOutcome id="speeding" probability="5" />
        <FlowOutcome id="mechanicalFailure" probability="2" />
        -->
      </FlowSequence>
      <Simulation>
        <CallTime min="30" max="60" />
      </Simulation>
      <Victim1>
        <VehicleTypes>
          <Meta probability="5">Compact</Meta>
          <Meta probability="5">Sedan</Meta>
          <Meta probability="5">Coupe</Meta>
          <Meta probability="5">Sport</Meta>
          <Meta probability="5">SUV</Meta>
          <Meta probability="3">Emergency</Meta>
          <Meta probability="3">Muscle</Meta>
          <Meta probability="2">Super</Meta>
        </VehicleTypes>
      </Victim1>
      <Victim2>
        <VehicleTypes>
          <Meta probability="5">Compact</Meta>
          <Meta probability="5">Sedan</Meta>
          <Meta probability="5">Coupe</Meta>
          <Meta probability="5">Sport</Meta>
          <Meta probability="5">SUV</Meta>
          <Meta probability="3">Emergency</Meta>
          <Meta probability="3">Muscle</Meta>
          <Meta probability="2">Super</Meta>
        </VehicleTypes>
      </Victim2>
    </RearEndNoInjuries>
    
  </Scenarios>
</CalloutMeta>
